<div id="form">
   <h2>login</h2>
   <form action="/login" method="POST">
      <label for="input-username">Username</label>
      <input type="username" id="input-username" name="username" placeholder="Your Username" />

      <label for="input-password">Password</label>
      <input type="password" id="input-password" name="password" placeholder="********" />

      <button type="Submit">Login</button>

      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}
   </form>
</div>